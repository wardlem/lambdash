# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# utf-8 charset
# four space indent
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

# 2-space indent for some file types
[*.{json,html,yml,eslintrc}]
indent_size = 2
